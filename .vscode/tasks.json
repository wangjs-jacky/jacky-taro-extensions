// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "/bin/zsh",
					"args": [
						"-c"
					]
				}
			},
		},
		{
			"type": "shell",
			"label": "exec with shell",
			"command": "node -v",
			"osx": {
				"options": {
					"shell": {
						"executable": "/bin/zsh",
						"args": [
							"-c"
						]
					}
				}
			},
		}
	]
}